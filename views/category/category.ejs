<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= category.name.toUpperCase() %></title>
  </head>
  <body>
    <h1><%= category.name %></h1>
    <% if (items.length > 0) { %>
    <ul>
      <% items.forEach(item => { %>
      <li>
        <a href="../item/<%= item.id%>">Name: <%= item.name%>, Quantity: <%= item.quantity %></a>
      </li>
      <% }); %>
    </ul>
    <% } else {%>
    <h2>No items found. :(</h2>
    <% } %>
  </body>
</html>
