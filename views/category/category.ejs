<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= category.name.toUpperCase() %></title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-blue-100 min-h-screen">
    <%- include("../partials/header") %>
    <div class="max-w-2xl mx-auto mt-10">
      <h1 class="text-4xl font-bold text-blue-700 mb-8 text-center"><%= category.name %></h1>
      <% if (items.length > 0) { %>
      <ul>
        <% items.forEach(item => { %>
        <li>
          <%- include("../partials/item-card", { item }) %>
        </li>
        <% }); %>
      </ul>
      <% } else {%>
      <h2 class="text-center text-red-600 font-semibold mt-8">No items found. :(</h2>
      <% } %>
      <div class="mt-8 text-center">
        <a href="/item/create" class="bg-blue-600 text-white px-6 py-2 rounded-md font-bold hover:bg-blue-800 transition">Create new item</a>
      </div>
    </div>
  </body>
</html>