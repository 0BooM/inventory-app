<form action="<%= formAction %>" method="post" class="space-y-6">
  <div>
    <label for="title" class="block font-semibold mb-1">Item name:</label>
    <input
      type="text"
      name="title"
      id="title"
      value="<%= item?.name || '' %>"
      class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
      <%= inputDisabled ? 'disabled' : '' %>
      required
    />
  </div>
  <div>
    <label for="quantity" class="block font-semibold mb-1">Quantity:</label>
    <input
      type="number"
      name="quantity"
      id="quantity"
      value="<%= item?.quantity || '' %>"
      min="1"
      max="999"
      class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
      <%= inputDisabled ? 'disabled' : '' %>
      required
    />
  </div>
  <% if (categories && categories.length > 0 && !inputDisabled) { %>
  <div>
    <label for="category" class="block font-semibold mb-1">Category:</label>
    <select
      name="category"
      id="category"
      class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
      required
    >
      <% categories.forEach(category => { %>
      <option value="<%= category.id %>" <%= item && item.category_id === category.id ? "selected" : "" %>><%= category.name %></option>
      <% }); %>
    </select>
  </div>
  <% } %>
  <div class="flex items-center justify-between mt-8">
    <input
      type="submit"
      value="<%= buttonText %>"
      class="bg-blue-600 hover:bg-blue-700 text-white font-bold px-6 py-2 rounded-md shadow transition cursor-pointer"
    />
    <a
      href="javascript:history.back()"
      class="text-blue-600 hover:underline font-semibold"
    >
      Go back
    </a>
  </div>
</form>