<% if (typeof errors !== "undefined" && errors.length > 0) { %>
  <ul class="mb-4 text-red-600 font-semibold">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>
<form action="<%= formAction %>" method="post" class="space-y-6">
  <div>
    <label for="title" class="block font-semibold mb-1">Category name:</label>
    <input
      type="text"
      name="title"
      id="title"
      value="<%= category?.name || oldInput?.title || '' %>"
      class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 mb-2"
      <%= inputDisabled ? 'disabled' : '' %>
      required
    />
    <label for="password" class="block font-semibold mb-1">Password:</label>
    <input
      type="password"
      name="password"
      id="password"
      class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
      required
    />
  </div>
  <div class="flex items-center justify-between mt-8">
    <input
      type="submit"
      value="<%= buttonText %>"
      class="bg-blue-600 hover:bg-blue-700 text-white font-bold px-6 py-2 rounded-md shadow transition"
    />
    <a
      href="javascript:history.back()"
      class="text-blue-600 hover:underline font-semibold"
    >
      Go back
    </a>
  </div>
</form>