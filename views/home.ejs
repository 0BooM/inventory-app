<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-blue-100">
    <%- include("partials/header") %>
    <div class="p-8">
      <div class="category-section bg-white rounded-lg shadow-md p-6 mb-6">
        <div class="category-list">
          <div
            class="header flex flex-col sm:flex-row justify-between mb-6 gap-3"
          >
            <h1 class="text-4xl font-bold text-blue-600">Categories</h1>
            <button
              class="bg-blue-600 text-white px-4 py-2.5 rounded-md font-bold hover:bg-blue-800 transition"
            >
              <a href="category/create">+ Add Category</a>
            </button>
          </div>
          <% if (categories.length > 0) { %>
          <ul
            class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4"
          >
            <% categories.forEach(category => {%>
            <li><%- include('partials/category-card', { category }) %></li>
            <%});%>
          </ul>
          <% } else { %>
          <h2>No categories found!</h2>
          <% }%>
        </div>
      </div>
      <div class="flex gap-4 w-full">
        <div class="quick-stats bg-white rounded-lg shadow-md p-6 flex-1">
          <h2 class="font-bold text-xl">ðŸ“ŠQuick stats:</h2>
          <p class="text-md">
            Total categories:
            <span class="text-blue-600"><%= categories.length %></span>
          </p>
        </div>
        <div class="flex quick-actions bg-white rounded-lg shadow-md p-6 flex-1 flex-col">
          <h2 class="font-bold text-xl">ðŸš€Quick actions:</h2>
          <a href="/item/create" class="text-blue-600 hover:text-blue-800 transition duration-100 w-fit">-> Add new item</a>
          <a href="/category/create" class="text-blue-600 hover:text-blue-800 transition duration-100 w-fit">-> Add new category</a>
        </div>
      </div>
    </div>
  </body>
</html>
